play_game= input('Do you want to play the game? Yes or no')
count_start=0
count_stop=0
if play_game.lower()=='yes':
    while  True:
        initiate=input('>')
        if initiate.lower()=='start':
            count_start+=1
            count_stop=0
            if count_start>1:
                print('The car is already started(Kya kar raha h bahinchod)')
            elif count_start==1:
                print('The car is started')
        elif initiate.lower()=='stop':
            count_stop+=1
            count_start=0
            if count_stop>1:
                print('The car is already stopped(kya chutiya h re gawar)')
            elif count_stop==1:
                print('The car is stopped')
        elif initiate=='help':
            print("""
Start: to start the car
Stop: to stop the car
Quit: to quit the game
                  """)
        elif initiate.lower()=='quit':
            break
